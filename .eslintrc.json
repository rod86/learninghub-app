{
    "plugins": [
        "@typescript-eslint"
    ],
    "parser": "@typescript-eslint/parser",
    "extends": [
        "next/core-web-vitals",
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
        "indent": ["error", 4],
        "semi": ["error", "always"],
        "no-console": "warn",
        "no-alert": "error",
        "@typescript-eslint/no-unused-vars": "error",
        "quotes": ["error", "single"],
        "prefer-template": "error"
    },
    "overrides": [
        {
            "files": ["./*.js"],
            "rules": {
                "@typescript-eslint/no-var-requires": "off"
            }
        }
    ]
}
